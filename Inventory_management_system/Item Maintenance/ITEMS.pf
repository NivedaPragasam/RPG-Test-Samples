---------------------------------------------------------------
-- ITEMS TABLE
---------------------------------------------------------------
CREATE TABLE INVENTORY.ITEMS (
  ITEMID        CHAR(10) NOT NULL PRIMARY KEY,
  ITEMDESC      VARCHAR(100),
  UOM           CHAR(3),
  QTY_ON_HAND   DECIMAL(15,2) DEFAULT 0 NOT NULL,
  QTY_ALLOC     DECIMAL(15,2) DEFAULT 0 NOT NULL,
  REORDER_LEVEL DECIMAL(15,2) DEFAULT 0 NOT NULL,
  LOCATION      CHAR(10),
  STATUS        CHAR(1) DEFAULT 'A'
);
